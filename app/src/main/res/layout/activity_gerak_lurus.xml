<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004D40"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".GerakLurus">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#004D40">

            <TextView
                android:id="@+id/tvJudul"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/roundedbutton"
                android:gravity="center"
                android:text="GLBB"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_Info"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/tvJudul"
                android:layout_marginTop="6dp"
                android:background="@drawable/tombolhijau"
                android:gravity="center"
                android:text="Info kalkulator"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="25sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tvtahu"
                android:layout_width="183dp"
                android:layout_height="45dp"
                android:layout_below="@id/btn_Info"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="30dp"
                android:background="#FFA000"
                android:gravity="center"
                android:text="Diketahui"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold" />


            //watch out!

            <TextView
                android:id="@+id/So"
                android:layout_width="82dp"
                android:layout_height="45dp"
                android:layout_below="@+id/tvtahu"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:background="#689F38"
                android:clickable="false"
                android:gravity="center|right"
                android:text="So = "
                android:textColor="#0F0F0F"
                android:textSize="25sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/in_So"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/tvtahu"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="60dp"
                android:layout_toRightOf="@id/So"
                android:background="@color/colorGrey"
                android:gravity="center"
                android:hint="m"
                android:inputType="numberSigned|numberDecimal"
                android:textColor="#0F0F0F"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/St"
                android:layout_width="82dp"
                android:layout_height="45dp"
                android:layout_below="@+id/tvtahu"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/in_So"
                android:background="#689F38"
                android:clickable="false"
                android:gravity="center|right"
                android:inputType="numberDecimal"
                android:text=" St = "
                android:textColor="#0F0F0F"
                android:textSize="25sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/in_St"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/tvtahu"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/St"
                android:background="@color/colorGrey"
                android:gravity="center"
                android:hint=" m"
                android:inputType="numberDecimal|textCapCharacters"
                android:textColor="#0F0F0F"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/t"
                android:layout_width="82dp"
                android:layout_height="45dp"
                android:layout_below="@+id/St"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="3dp"
                android:background="#689F38"
                android:clickable="false"
                android:gravity="center|right"
                android:text=" t = "
                android:textColor="#0F0F0F"
                android:textSize="25sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/in_t"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/St"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/t"
                android:background="@color/colorGrey"
                android:gravity="center"
                android:hint="s"
                android:inputType="numberDecimal|textCapCharacters"
                android:textColor="#0F0F0F"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/a"
                android:layout_width="82dp"
                android:layout_height="45dp"
                android:layout_below="@+id/St"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/in_t"
                android:background="#689F38"
                android:clickable="false"
                android:gravity="center|right"
                android:text="a = "
                android:textColor="#0F0F0F"
                android:textSize="25sp"
                android:textStyle="italic" />


            <EditText
                android:id="@+id/in_a"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/St"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/a"
                android:background="@color/colorGrey"
                android:gravity="center"
                android:hint=" m/s^2"
                android:inputType="numberDecimal|textCapCharacters"
                android:textColor="#0F0F0F"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Vo"
                android:layout_width="82dp"
                android:layout_height="45dp"
                android:layout_below="@+id/a"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="3dp"
                android:background="#689F38"
                android:clickable="false"
                android:fontFamily="serif"
                android:gravity="center|right"
                android:text=" vo = "
                android:textColor="#0F0F0F"
                android:textSize="25sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/in_Vo"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/a"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/Vo"
                android:background="@color/colorGrey"
                android:gravity="center"
                android:hint=" m/s"
                android:inputType="numberDecimal|textCapCharacters"
                android:textColor="#0F0F0F"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/Vt"
                android:layout_width="82dp"
                android:layout_height="45dp"
                android:layout_below="@+id/a"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/in_Vo"
                android:background="#689F38"
                android:clickable="false"
                android:fontFamily="serif"
                android:gravity="center|right"
                android:text="vt ="
                android:textColor="#0F0F0F"
                android:textSize="25sp"
                android:textStyle="italic" />

            <EditText
                android:id="@+id/in_Vt"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/a"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/Vt"
                android:background="@color/colorGrey"
                android:gravity="center"
                android:hint=" m/s"
                android:inputType="numberDecimal|textCapCharacters"
                android:textColor="#0F0F0F"
                android:textSize="25sp" />


            <Button
                android:id="@+id/btnclear"
                android:layout_width="183dp"
                android:layout_height="45dp"
                android:layout_below="@+id/Vt"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="3dp"
                android:background="#E45F5F"
                android:text="Hapus"
                android:textAllCaps="false"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnglb"
                android:layout_width="370dp"
                android:layout_height="45dp"
                android:layout_below="@+id/btnclear"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:drawableRight="@drawable/next"
                android:gravity="center"
                android:text="Lanjut GLB"
                android:textAllCaps="false"
                android:textSize="25sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tanya"
                android:layout_width="183dp"
                android:layout_height="45dp"
                android:layout_below="@+id/btnglb"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:background="#FFA000"
                android:gravity="center"
                android:text="Ditanyakan"
                android:textColor="#0F0F0F"
                android:textSize="25sp"
                android:textStyle="bold" />


            <Button
                android:id="@+id/btn_St"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tanya"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:background="#689F38"
                android:fontFamily="monospace"
                android:text="St"
                android:textAllCaps="false"
                android:textSize="27sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btn_t"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tanya"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/btn_St"
                android:background="#689F38"
                android:fontFamily="monospace"
                android:text="t"
                android:textAllCaps="false"
                android:textSize="27sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btn_Vo"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tanya"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/btn_t"
                android:background="#689F38"
                android:fontFamily="serif"
                android:text="vo"
                android:textAllCaps="false"
                android:textSize="27sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btn_Vt"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tanya"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/btn_Vo"
                android:background="#689F38"
                android:capitalize="characters"
                android:fontFamily="serif"
                android:text="vt"
                android:textAllCaps="false"
                android:textSize="27sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btn_a"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tanya"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/btn_Vt"
                android:background="#689F38"
                android:fontFamily="monospace"
                android:text="a"
                android:textAllCaps="false"
                android:textSize="27sp"
                android:textStyle="italic" />

            <TextView
